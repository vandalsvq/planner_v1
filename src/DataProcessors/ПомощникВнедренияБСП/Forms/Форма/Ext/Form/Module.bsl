			+ КаталогКонфигурации + """ /N"""
			+ Пользователь + """ /P""" + Пароль
			+ """ /DumpConfigFiles """ + Объект.КаталогВыгрузкиМодулей
			+ """ -Module";
			ЗапуститьПриложение(КоманднаяСтрока,,Истина);
		#КонецЕсли
		
